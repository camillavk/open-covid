<div class="row justify-content-md-center">
  <div class="col-sm-6">
  <%= form_for(@project) do |f| %>
    <div class="form-group">
      <%= f.label :title, 'Project title' %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :short_description %>
      <p class="info-text">Max 140 chars</p>
      <%= f.text_field :short_description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :url, 'URL' %>
      <%= f.text_field :url, class: "form-control" %>
    </div>
  </div>
  <div class="col-sm-2">
  </div>
</div>

<div class="row justify-content-md-center">
  <div class="col-sm-8">
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
    </div>      
  </div>
</div>

<div class="row justify-content-md-center">
  <div class="col-sm-6">
    <div class="form-group">
      <%= f.fields_for :tag, @tags do |t| %>
        <%= t.label :name, 'Tags' %>
        <p class="info-text">Start typing to select a tag or create a new one</p>
        <%= t.text_field :name, class: "form-control flexdatalist", value: @tag_values, list: "available_tags", multiple: "multiple" %>
        <datalist id="available_tags">
          <% @available_tags.each do |tag| %>
            <option value="<%= tag.name %>"><%= tag.name %></option>
          <% end %>
        </datalist>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <p class="info-text">This will not be displayed, but if you donâ€™t enter one you will not be able to edit your project</p>
      <%= f.email_field :email, class: "form-control", value: nil %>
    </div>

    <div class="form-group">
      <%= f.submit :Save, class: "form-control button--primary" %>
    </div>
  <% end %>
  </div>
  <div class="col-sm-2">
  </div>
</div>

